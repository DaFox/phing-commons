<project name="test.jslint">


    <!-- ============================================  -->
    <!-- test.jslint:init                              --> 
    <!-- ============================================  -->  
    <target name="test.jslint:init">
        <echo message="test.jslint:init default" />
        
        <patternset id="patternset.test.jslint">
            <include name="**/*.js"     />
            <exclude name="**/*.min.js" />
            <exclude name="vendor/**"   />
        </patternset>
    </target>
    
    
    <!-- ============================================  -->
    <!-- test.jslint:before                            -->
    <!-- ============================================  -->
    <target name="test.jslint:before">
        <echo message="test.jslint:before default" />
    </target>
        
        
    <!-- ============================================  -->
    <!-- test.jslint:main                              --> 
    <!-- ============================================  -->  
    <target name="test.jslint:main">
        <jsllint cachefile="./jslint.cache">
            <fileset dir="${project.public.js}">
                <patternset refid="patternset.test.jslint" />
            </fileset>
        </jsllint>
    </target>
    
    
    <!-- ============================================  -->
    <!-- test.jslint:after                             -->
    <!-- ============================================  -->
    <target name="test.jslint:after">
        <echo message="test.jslint:after default" />
    </target>
    
    
    <!-- ============================================  -->
    <!-- test.jslint                                   -->
    <!-- ============================================  -->
    <target name="test.jslint" depends="test.jslint:init,test.jslint:before,test.jslint:main,test.jslint:after" />
 
 
</project>