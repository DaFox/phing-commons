<?xml version="1.0" encoding="UTF-8"?>


<project name="bundle.javascript">


    <!-- ============================================ -->
    <!-- bundle.javascript:before                     -->
    <!-- ============================================ -->
    <target name="bundle.javascript:before">
        <echo message="no actions defined" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.javascript:main                       -->
    <!-- ============================================ -->
    <target name="bundle.javascript:main">
        <phing-commons-bundle-javascript
                target="${project.public.javascript}"
                java="${java}"
                compiler="${bundle.javascript.compiler}"
                verbose="${bundle.javascript.verbose}"
                manifest="${manifest.javascript}"
                folder="${project.public}" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.javascript:after                      -->
    <!-- ============================================ -->
    <target name="bundle.javascript:after">
        <echo message="no actions defined" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.javascript                            -->
    <!-- ============================================ -->
    <target name="bundle.javascript" depends="bundle.javascript:before, bundle.javascript:main, bundle.javascript:after" />


</project>