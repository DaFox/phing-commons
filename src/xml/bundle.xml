<?xml version="1.0" encoding="UTF-8"?>


<project name="bundle">


    <!-- ============================================ -->
    <!-- properties                                   -->
    <!-- ============================================ -->
    <property name="bundle.js.compile.level" value="SIMPLE_OPTIMIZATIONS" />
    <property name="bundle.js.compile.warning.level" value="DEFAULT" />
    <property name="bundle.project.verbose" value="1" />
    <property name="bundle.css.verbose" value="1" />
    <property name="bundle.js.verbose" value="1" />


    <!-- ============================================ -->
    <!-- import                                       -->
    <!-- ============================================ -->
    <import file="${phing:commons:xml}/bundle/css.xml" />
    <import file="${phing:commons:xml}/bundle/js.xml" />
    <import file="${phing:commons:xml}/bundle/project.xml" />


    <!-- ============================================ -->
    <!-- help.bundle                                  -->
    <!-- ============================================ -->
    <target name="help.bundle">
        <echo message="target                                  description" />
        <echo message="================================================================================" />
        <echo message="bundle.css                              bundle, minify css" />
        <echo message="bundle.js                               bundle, minify js" />
        <echo message="bundle.project                          bundle the project" />
        <echo message="" />
        <echo message="property                                value" />
        <echo message="================================================================================" />
        <echo message="bundle.js.compile.level                 ${bundle.js.compile.level}" />
        <echo message="bundle.js.compile.warning.level         ${bundle.js.compile.warning.level}" />
        <echo message="bundle.project.verbose                  ${bundle.project.verbose}" />
        <echo message="bundle.css.verbose                      ${bundle.css.verbose}" />
        <echo message="bundle.js.verbose                       ${bundle.js.verbose}" />
    </target>


</project>