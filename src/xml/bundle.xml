<!-- @author Jan Thoennessen <jan.thoennessen@googlemail.com>      --> 
<!-- ============================================================  -->
<project name="bundle">



    <!-- ============================================  -->
    <!-- tasks                                         -->
    <!-- ============================================  -->
    <includepath classpath="${phing:commons:basedir}/tasks" />
    <taskdef classname="PhingCommonsAppendTask" name="phing-commons-append"  />
    <taskdef classname="PhingCommonsMinCSSTask" name="phing-commons-min-css" />
    <taskdef classname="PhingCommonsMinJSTask"  name="phing-commons-min-js" />
    
    
    
    <!-- ============================================  -->
    <!-- help.bundle                                   --> 
    <!-- ============================================  -->
    <target name="help.bundle">
        <echo message="bundle.pack.css (CSS Minify / Append)"    />
        <echo message="bundle.pack.js  (JS Minify / Append)"     />
        <echo message="bundle.pack     (Minify / Append)"        />
        <echo message="bundle          (Bundle the project)"     />
    </target>
    
  
 
    <!-- ============================================  -->
    <!-- bundle.pack.css                               --> 
    <!-- ============================================  -->  
    <target name="bundle.pack.css">
        <property name="tmp.css" value="${project.path.build}/tmp/css" />
        
        <delete dir="${tmp.css}" />
        <mkdir  dir="${tmp.css}" />
        
        <phing-commons-append destFile="${tmp.css}/build.tmp.max.css" failonerror="true">
            <filelist dir="${project.path.css}" listfile="${project.path.css}/build.max" />
        </phing-commons-append>
        
        <phing-commons-append destFile="${tmp.css}/build.tmp.min.css" failonerror="true">
            <filelist dir="${project.path.css}" listfile="${project.path.css}/build.min" />
        </phing-commons-append>
        
        <phing-commons-min-css targetDir="${tmp.css}" suffix=".min" failonerror="false">
            <filelist dir="${tmp.css}" files="build.tmp.min.css"/>
        </phing-commons-min-css>        
        
        <phing-commons-append destFile="${tmp.css}/build.min.css" failonerror="true">
            <filelist dir="${tmp.css}" files="build.tmp.max.css,build.tmp.min.min.css"/>
        </phing-commons-append>
    </target>
    
    
    
    <!-- ============================================  -->
    <!-- bundle.pack.js                                --> 
    <!-- ============================================  -->  
    <target name="bundle.pack.js" depends="test.jslint">
        <echo msg="run bundle.pack.js" />
        
        <property name="tmp.js" value="${project.path.build}/tmp/js" />
        
        <delete dir="${tmp.js}" />
        <mkdir  dir="${tmp.js}" />
           
        <phing-commons-append destFile="${tmp.js}/build.tmp.max.js" failonerror="true">
            <filelist dir="${project.path.js}" listfile="${project.path.js}/build.max" />
        </phing-commons-append>
        
        <phing-commons-append destFile="${tmp.js}/build.tmp.min.js" failonerror="true">
            <filelist dir="${project.path.js}" listfile="${project.path.js}/build.min" />
        </phing-commons-append>
                
        <phing-commons-min-js targetDir="${tmp.js}" suffix=".min" failonerror="false" packed="true">
            <filelist dir="${tmp.js}" files="build.tmp.min.js"/>
        </phing-commons-min-js>   
              
        <phing-commons-append destFile="${tmp.js}/build.min.js" failonerror="true">
            <filelist dir="${tmp.js}" files="build.tmp.max.js,build.tmp.min.min.js"/>
        </phing-commons-append>
                                                
        <echo msg="end bundle.pack.js" />
    </target>
    
    

    <!-- ============================================  -->
    <!-- bundle.pack                                   --> 
    <!-- ============================================  -->  
    <target name="bundle.pack" depends="bundle.pack.css,bundle.pack.js" />
    
    
    
    <!-- ============================================  -->
    <!-- bundle                                        --> 
    <!-- ============================================  -->  
    <target name="bundle" depends="bundle.pack" />
    
    
                
</project>