<?xml version="1.0" encoding="UTF-8"?>


<project name="bundle">


    <!-- ============================================ -->
    <!-- properties                                   -->
    <!-- ============================================ -->
    <property name="bundle.javascript.compile.level" value="SIMPLE_OPTIMIZATIONS" />
    <property name="bundle.javascript.compile.warning.level" value="DEFAULT" />
    <property name="bundle.project.verbose" value="1" />
    <property name="bundle.stylesheet.verbose" value="1" />
    <property name="bundle.stylesheet.compiler" value="yuicompressor" />
    <property name="bundle.javascript.verbose" value="1" />
    <property name="bundle.javascript.compiler" value="google" />


    <!-- ============================================ -->
    <!-- import                                       -->
    <!-- ============================================ -->
    <import file="${phing:commons:xml}/bundle/stylesheet.xml" />
    <import file="${phing:commons:xml}/bundle/javascript.xml" />
    <import file="${phing:commons:xml}/bundle/project.xml" />


    <!-- ============================================ -->
    <!-- help.bundle                                  -->
    <!-- ============================================ -->
    <target name="help.bundle">
        <echo message="target                                  description" />
        <echo message="================================================================================" />
        <echo message="bundle.stylesheet                       bundle, minify css" />
        <echo message="bundle.javascript                       bundle, minify js" />
        <echo message="bundle.project                          bundle the project" />
        <echo message="" />
        <echo message="property                                value" />
        <echo message="================================================================================" />
        <echo message="bundle.project.verbose                  ${bundle.project.verbose}" />
        <echo message="bundle.stylesheet.verbose               ${bundle.stylesheet.verbose}" />
        <echo message="bundle.stylesheet.compiler              ${bundle.stylesheet.compiler} (yuicompressor|cssmin)" />
        <echo message="bundle.javascript.verbose               ${bundle.javascript.verbose}" />
        <echo message="bundle.javascript.compiler              ${bundle.javascript.compiler} (google|yuicompressor)" />
    </target>


</project>