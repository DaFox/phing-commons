<?xml version="1.0" encoding="UTF-8"?>


<project name="bundle.css">


    <!-- ============================================ -->
    <!-- bundle.css:before                            -->
    <!-- ============================================ -->
    <target name="bundle.css:before">
        <echo message="no actions defined" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.css:main                              -->
    <!-- ============================================ -->
    <target name="bundle.css:main">
        <phing-commons-bundle-css
                target="${project.public.css}"
                java="${java}"
                compiler="${bundle.css.compiler}"
                verbose="${bundle.css.verbose}"
                manifest="${manifest.css}"
                folder="${project.public}" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.css:after                             -->
    <!-- ============================================ -->
    <target name="bundle.css:after">
        <echo message="no actions defined" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.css                                   -->
    <!-- ============================================ -->
    <target name="bundle.css" depends="bundle.css:before, bundle.css:main, bundle.css:after" />


</project>