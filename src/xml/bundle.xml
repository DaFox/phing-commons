    <!-- ============================================  -->
    <import file="${phing:commons:xml}/bundle/js.xml"  />
    <import file="${phing:commons:xml}/bundle/css.xml" />
    
    
    <!-- ============================================  -->
    <!-- help.bundle                                   --> 
    <!-- ============================================  -->
    <target name="help.bundle">
        <echo message="bundle.js  (JS  minification / appending)"  />
        <echo message="bundle.css (CSS minification / appending)" />
        <echo message="bundle     (run all)"                      />
    </target>
    
  
    <!-- ============================================  -->
    <!-- bundle                                        -->
    <!-- ============================================  -->
    <target name="bundle" depends="bundle.js,bundle.css" />
    
                     
</project>