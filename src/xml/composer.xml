<?xml version="1.0" encoding="UTF-8"?>


<project name="composer">


    <!-- ============================================ -->
    <!-- properties                                   -->
    <!-- ============================================ -->
    <property name="composer.archive.patternset" value="composer.archive.patternset" />


    <!-- ============================================ -->
    <!-- patternsets                                  -->
    <!-- ============================================ -->
    <patternset id="composer.archive.patternset">
        <include name="**/**" />
        <exclude name="build/**" />
        <exclude name="config/**" />
        <exclude name="manifest/**" />
        <exclude name="module/**" />
        <exclude name="public/**" />
        <exclude name="tasks/**" />
        <exclude name="tests/**" />
        <exclude name="vendor/**" />
        <exclude name=".idea/**" />
        <exclude name=".settings/**" />
        <exclude name="**/*properties" />
    </patternset>


    <!-- ============================================ -->
    <!-- import                                       -->
    <!-- ============================================ -->
    <import file="${phing:commons:xml}/composer/archive.xml" />
    <import file="${phing:commons:xml}/composer/deploy.xml" />


    <!-- ============================================ -->
    <!-- help.composer                                -->
    <!-- ============================================ -->
    <target name="help.composer">
        <echo message="target                                  description" />
        <echo message="================================================================================" />
        <echo message="composer.archive                        create composer package archive" />
        <echo message="composer.deploy                         deploy composer package" />
        <echo message="" />
        <echo message="property                                value" />
        <echo message="================================================================================" />
        <echo message="composer.properties                     ${composer.properties}" />
        <echo message="composer.archive.patternset             ${composer.archive.patternset}" />
        <echo message="composer.deploy.username                ${composer.deploy.username}" />
        <echo message="composer.deploy.password                ${composer.deploy.password}" />
        <echo message="composer.deploy.host                    ${composer.deploy.host}" />
        <echo message="composer.deploy.path                    ${composer.deploy.path}" />
    </target>


</project>