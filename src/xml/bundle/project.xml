<?xml version="1.0" encoding="UTF-8"?>


<project name="bundle.project">


    <!-- ============================================ -->
    <!-- bundle.project:before                        -->
    <!-- ============================================ -->
    <target name="bundle.project:before">
        <echo message="no actions defined" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.project:main                          -->
    <!-- ============================================ -->
    <target name="bundle.project:main">
        <delete dir="${build.project}" />
        <mkdir dir="${build.project}" />

        <phing-commons-project-bundle
                manifest="${manifest.project}"
                projectRoot="${project.root}"
                buildProject="${build.project}"
                verbose="${bundle.project.verbose}" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.project:after                         -->
    <!-- ============================================ -->
    <target name="bundle.project:after">
        <echo message="no actions defined" />
    </target>


    <!-- ============================================ -->
    <!-- bundle.project                               -->
    <!-- ============================================ -->
    <target name="bundle.project" depends="bundle.project:before, bundle.project:main, bundle.project:after" />


</project>